@model IEnumerable<CarServiceAPP.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customer List</h2>

<button>@Html.ActionLink("Create New Customer", "CustomerForm", "Customer")</button>
@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
    {
<div class="container searchbar" style="display: flex; justify-content: flex-end">
    <div class="d-flex justify-content-center h-100">
        <div class="searchbar" style="background-color:darkgrey;">

            @Html.RadioButton("option", "FirstName") <text><strong>FirstName</strong></text>
            @Html.RadioButton("option", "Mobile") <text><strong>Mobile</strong></text>
            @Html.RadioButton("option", "Email")<text><strong>Email</strong></text>
            @Html.TextBox("search") <input type="submit" name="submit" value="Search" />

        </div>
    </div>
</div>
    }
@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td>@item.City</td>
                <td>@Html.ActionLink("View Cars", "ViewDetails", item, new { @class = "btn  btn-primary" })</td>
                <td>@Html.ActionLink("Edit", "CustomerForm", item, new { @class = "btn  btn-success" })</td>
                <td>@Html.ActionLink("Delete", "DeleteCustomerDetails", item, new { @class = "btn  btn-danger" })</td>
            </tr>
        }

    </table>
}
else
{
    <h4>No customer found</h4>
}



