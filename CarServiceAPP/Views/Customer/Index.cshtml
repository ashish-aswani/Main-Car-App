@model IEnumerable<CarServiceAPP.Models.Customer>
@{
	ViewBag.Title = "Index";
}

<h2>Customer List</h2>

<button>@Html.ActionLink("Create New Customer", "CustomerForm", "Customer")</button>

@if (Model.Any())
{
	<table class="table table-striped table-hover">
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Mobile</th>
			<th>City</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		@foreach (var item in Model)
		{
	<tr>
		<td>@item.FirstName</td>
		<td>@item.LastName</td>
		<td>@item.Email</td>
		<td>@item.Mobile</td>
		<td>@item.City</td>
		<td>@Html.ActionLink("View Cars", "ViewCars", item,new { @class = "btn  btn-primary"})</td>
		<td>@Html.ActionLink("Edit", "CustomerForm", item,new { @class = "btn  btn-success"})</td>
		<td>@Html.ActionLink("Delete", "DeleteCustomerDetails", item,new { @class = "btn  btn-danger"})</td>
	</tr>
		}

	</table>
}
else
{
	<h4>No customer found</h4>
}



