@model CarServiceAPP.ViewModels.CarAndCustomerViewModel
@{ 
    ViewBag.Title = "ViewDetails";
}

<h2>View Details</h2>

<table class="table  table-striped table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Mobile</th>
    </tr>

    <tr>
        <td>@Model.Customers.FirstName</td>
        <td>@Model.Customers.LastName</td>
        <td>@Model.Customers.Email</td>
        <td>@Model.Customers.City</td>
        <td>@Model.Customers.Mobile</td>
    </tr>
</table>

<table class="table table-bordered table-striped">
    <tr>
        <th>VIN</th>
        <th>Make</th>
        <th>Model</th>
        <th>Style</th>
        <th>Year</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model.Cars)
    {
        if (item.CustomerId == Model.Customers.Id)
        {
            <tr>
                <td>@item.VIN</td>
                <td>@item.Make</td>
                <td>@item.Model</td>
                <td>@item.Style</td>
                <td>@item.Year</td>
                <td>@Html.ActionLink("View Service", "Service","Service", item,new { @class ="btn btn-dark"})</td>
		        <td>@Html.ActionLink("Edit", "EditCar","Car",item,new { @class = "btn  btn-warning"})</td>
		        <td>@Html.ActionLink("Delete", "DeleteCar","Car", item,new { @class = "btn  btn-danger"})</td>
            </tr>
        }

    }

</table>

<button>@Html.ActionLink("Add Car", "CarForm", "Car",Model.Customers,new {style="color:red;" })</button>

    

