@model CarServiceAPP.ViewModels.CarAndServiceViewModel
@{
    ViewBag.Title = "Service";
}

<h2>Car</h2>
<table class="table table-bordered table-striped">
    <tr>
        <th>VIN</th>
        <th>Make</th>
        <th>Model</th>
        <th>Style</th>
        <th>Year</th>

    </tr>
    <tr>
        <td>@Model.Cars.VIN</td>
        <td>@Model.Cars.Make</td>
        <td>@Model.Cars.Model</td>
        <td>@Model.Cars.Style</td>
        <td>@Model.Cars.Year</td>
    </tr>
</table>
<h2>Service History</h2>

@if (!Model.Services.Any())
{
    <h1>No service history</h1>
}
else
{
<table class="table table-bordered table-striped">
    <tr>
        <th>Miles</th>
        <th>Price</th>
        <th>Date Added</th>
        <th>Service Type</th>
        <th></th>


    </tr>
    @foreach (var item in Model.Services)
    {
<tr>
    <td>@item.Miles</td>
    <td>@item.Price</td>
    <td>@item.DateAdded</td>
    <td>@item.ServiceType</td>
    <td><button class="btn btn-danger">@Html.ActionLink("Delete", "DeleteService", "Service", item, new { })</button></td>
</tr>
    }

</table>
}

<button>@Html.ActionLink("Add Service", "ServiceForm", "Service", Model.Cars, new { style = "color:red;" })</button>
