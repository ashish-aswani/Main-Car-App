@model CarServiceAPP.ViewModels.CarAndCustomerViewModel
@{
    ViewBag.Title = "Details";
}

<h2>View Details</h2>
@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
<table class="table  table-striped table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Mobile</th>
        <th></th>
    </tr>

    <tr>
        <td>@Model.User.FirstName</td>
        <td>@Model.User.LastName</td>
        <td>@Model.User.Email</td>
        <td>@Model.User.City</td>
        <td>@Model.User.PhoneNumber</td>
        <td>@Html.ActionLink(" ", "EditCustomer", "Customer", Model.User, new { @class = "btn  btn-success fa fa-edit" })</td>
    </tr>
</table>


<table class="table table-bordered table-striped">
    <tr>
        <th>VIN</th>
        <th>Make</th>
        <th>Model</th>
        <th>Style</th>
        <th>Year</th>
        <th></th>
        <th></th>
        @if (ViewContext.HttpContext.User.IsInRole("admin"))
        {
            <th></th>
        }
    </tr>
    @foreach (var item in Model.Cars)
    {
        if (item.ApplicationUserId == Model.User.Id)
        {
            <tr>
                <td>@item.VIN</td>
                <td>@item.Make</td>
                <td>@item.Model</td>
                <td>@item.Style</td>
                <td>@item.Year</td>

                <td>@Html.ActionLink(" ", "Service", "Service", item, new { @class = "btn btn-dark fa fa-wrench" })</td>
                
                <td>@Html.ActionLink(" ", "EditCar", "Car", item, new { @class = "btn  btn-success fa fa-pencil" })</td>
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
                    {
                        <td>@Html.ActionLink(" ", "DeleteCar", "Car", item, new { @class = "btn  btn-danger fa fa-trash" })</td> 
                    }
            </tr>
        }

    }

</table>

<button>@Html.ActionLink("Add Car", "CarForm", "Car", Model.User, new { @class = " btn fa fa-plus ", style = "color:black;" })</button>
